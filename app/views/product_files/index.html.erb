<p id="notice"><%= notice %></p>

<h1>Product Files</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_files.each do |product_file| %>
      <tr>
        <td><%= product_file._id %></td>
        <td><%= product_file.name %></td>
        <td><%= link_to 'Show', product_file %></td>
        <td><%= link_to 'Edit', edit_product_file_path(product_file) %></td>
        <td><%= link_to 'Destroy', product_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product File', new_product_file_path %>
